FROM python:3.10-slim

# 필요한 패키지 설치 (cron, netcat, curl)
RUN apt-get update && apt-get install -y cron netcat-openbsd curl && rm -rf /var/lib/apt/lists/*

# uv 설치 및 PATH 등록
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:${PATH}"

# 작업 디렉토리 설정
WORKDIR /app

# 프로젝트 파일 복사 및 의존성 설치
COPY pyproject.toml uv.lock ./
RUN uv sync

# 소스 복사
COPY Database ./Database

# cronjob 등록
COPY Database/cronjob /etc/cron.d/cronjob
RUN chmod 0644 /etc/cron.d/cronjob

# 로그 파일 생성
RUN touch /var/log/cron.log

# cron 실행
CMD cron && tail -f /var/log/cron.log
